{
  "name": "cicd-todo-app",
  "version": "1.0.0",
  "description": "ToDo CI/CD App",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "clean": "rimraf dist",
    "copy-public": "copyfiles -u 1 src/public/**/* dist",
    "build": "npm run clean && tsc && npm run copy-public",
    "dev": "NODE_ENV=development nodemon --watch src --ext ts --exec \"npm run build && npm start\"",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production && npm start",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test": "jest ",
    "test:unit": "jest src/tests/task.controller.test.ts",
    "test:accept": "jest src/tests/tasks.test.ts",
    "test:e2e": "jest src/tests/tasks.e2e.test.ts",
    "test:ui": "npx playwright test src/tests/tasks-ui.pw.spec.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sgalle16/cicd-todo-app.git"
  },
  "keywords": [],
  "author": "sgalle16",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sgalle16/cicd-todo-app/issues"
  },
  "homepage": "https://github.com/sgalle16/cicd-todo-app#readme",
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@playwright/test": "^1.51.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "axios": "^1.8.4",
    "copyfiles": "^2.4.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "node-mocks-http": "^1.16.2",
    "nodemon": "^3.1.9",
    "playwright": "^1.51.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0"
  }
}
